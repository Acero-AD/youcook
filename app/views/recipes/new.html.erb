<div class="relative">
  <div class="absolute inset-0 bg-white bg-opacity-70 backdrop-filter backdrop-blur-sm rounded-3xl shadow-lg z-0"></div>
  <div class="relative z-10 p-8">
    <%= render partial: 'header' %>
    
    <h1 class="text-4xl font-bold text-center mb-8 text-stone-800">Create New Recipe</h1>

    <%= form_with(model: @recipe, local: true, class: "space-y-6") do |form| %>
      <% if @errors.present? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Please correct the following errors:</strong>
          <ul class="mt-2 list-disc list-inside">
            <% @errors.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, class: "block text-sm font-medium text-stone-700" %>
        <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-stone-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-500 focus:ring-opacity-50" %>
      </div>

      <div data-controller="ingredients">
        <label class="block text-sm font-medium text-stone-700 mb-2">Ingredients</label>
        <div data-ingredients-target="list" class="space-y-2">
        </div>
        <button type="button" data-action="click->ingredients#addIngredient" class="mt-2 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
          Add Ingredient
        </button>

        <template data-ingredients-target="template">
          <div class="flex items-center ingredient-item">
            <input type="text" name="recipe[ingredients][]" class="flex-grow rounded-md border-stone-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-500 focus:ring-opacity-50" placeholder="Enter an ingredient">
            <button type="button" data-action="click->ingredients#removeIngredient" class="remove-ingredient ml-2 text-red-600 hover:text-red-800">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </template>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :prep_time, "Preparation Time (minutes)", class: "block text-sm font-medium text-stone-700" %>
          <%= form.number_field :prep_time, min: 0, class: "mt-1 block w-full rounded-md border-stone-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-500 focus:ring-opacity-50" %>
        </div>

        <div>
          <%= form.label :cook_time, "Cooking Time (minutes)", class: "block text-sm font-medium text-stone-700" %>
          <%= form.number_field :cook_time, min: 0, class: "mt-1 block w-full rounded-md border-stone-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-500 focus:ring-opacity-50" %>
        </div>
      </div>

      <div>
        <%= form.label :ratings, class: "block text-sm font-medium text-stone-700" %>
        <%= form.number_field :ratings, min: 0, max: 5, step: 0.1, class: "mt-1 block w-full rounded-md border-stone-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-500 focus:ring-opacity-50" %>
      </div>

      <div>
        <%= form.label :author, class: "block text-sm font-medium text-stone-700" %>
        <%= form.text_field :author, class: "mt-1 block w-full rounded-md border-stone-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-500 focus:ring-opacity-50" %>
      </div>

      <div>
        <%= form.label :cuisine, class: "block text-sm font-medium text-stone-700" %>
        <%= form.text_field :cuisine, class: "mt-1 block w-full rounded-md border-stone-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-500 focus:ring-opacity-50" %>
      </div>

      <div>
        <%= form.label :category, class: "block text-sm font-medium text-stone-700" %>
        <%= form.text_field :category, class: "mt-1 block w-full rounded-md border-stone-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-500 focus:ring-opacity-50" %>
      </div>

      <div>
        <%= form.label :image, "Image URL", class: "block text-sm font-medium text-stone-700" %>
        <%= form.url_field :image, class: "mt-1 block w-full rounded-md border-stone-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-500 focus:ring-opacity-50", placeholder: "https://example.com/image.jpg" %>
      </div>

      <div class="flex items-center justify-end mt-6">
        <%= link_to "Cancel", recipes_path, class: "bg-stone-600 text-white px-6 py-2 rounded-full hover:bg-stone-700 transition-colors duration-300 mr-4" %>
        <%= form.submit "Create Recipe", class: "bg-green-600 text-white px-6 py-2 rounded-full hover:bg-green-700 transition-colors duration-300" %>
      </div>
    <% end %>
  </div>
</div>