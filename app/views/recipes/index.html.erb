<div class="relative">
  <div class="absolute inset-0 bg-white bg-opacity-70 backdrop-filter backdrop-blur-sm rounded-3xl shadow-lg z-0"></div>
  <div class="relative z-10 p-8">
    <%= render partial: 'header' %>

    <h2 class="text-4xl font-bold text-center mb-8 text-stone-800">
      Discover delicious recipes
    </h2>

    <div id="recipes-list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <%= render partial: 'recipe', collection: @recipes %>
    </div>

    <div class="mt-12">
      <%= paginate @recipes %>
    </div>

    <div class="mb-8 text-center">
      <%= link_to "Search recipes", search_recipes_path, class: "bg-stone-200 text-black px-6 py-4 rounded-full hover:bg-stone-300 focus:outline-none inline-flex items-center" %>
    </div>
  </div>
</div>