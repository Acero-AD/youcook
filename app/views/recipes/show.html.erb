<div class="relative">
  <div class="absolute inset-0 bg-white bg-opacity-70 backdrop-filter backdrop-blur-sm rounded-3xl shadow-lg z-0"></div>
  <div class="relative z-10 p-8">
    <%= render partial: 'header' %>
    <h1 class="text-4xl font-bold text-center mb-6 text-stone-800"><%= @recipe.title %></h1>
    
    <div class="mb-8 flex justify-center">
      <%= image_tag @recipe.display_image, class: "w-full max-w-2xl h-64 object-cover rounded-xl shadow-md" %>
    </div>

    <div class="grid md:grid-cols-1 gap-8 mb-8">
      <div class="bg-white p-6 rounded-xl shadow-md">
        <h2 class="text-2xl font-semibold mb-4 text-stone-800">Details</h2>
        <div class="space-y-2">
          <p class="flex items-center text-stone-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-olive-600" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
            Preparation time: <%= @recipe.prep_time %> minutes
          </p>
        </div>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-md">
        <h2 class="text-2xl font-semibold mb-4 text-stone-800">Ratings</h2>
        <div class="flex items-center">
          <% 5.times do |i| %>
            <% if i < (@recipe.ratings || 0) %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-amber-500" viewBox="0 0 20 20" fill="currentColor">
                <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" />
                <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z" />
              </svg>
            <% else %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-300" viewBox="0 0 20 20" fill="currentColor">
                <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" />
                <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z" />
              </svg>
            <% end %>
          <% end %>
          <span class="ml-4 text-2xl text-stone-800"><%= @recipe.ratings || 'Sin calificaciÃ³n' %></span>
        </div>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-md">
        <h2 class="text-2xl font-semibold mb-4 text-stone-800">Ingredients</h2>
        <ul class="list-disc list-inside space-y-2">
          <% @recipe.ingredients.each do |ingredient| %>
            <li class="text-stone-600"><%= ingredient %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
